<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".upload_post.PostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

    <!-- Your existing layout content -->

    <!-- TODO: Update blank fragment layout -->
    <!-- ImageView for displaying the photo -->
    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        android:contentDescription="Posted Photo"/>

    <!-- EditText for entering the subtitle -->
    <EditText
        android:id="@+id/subtitleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a subtitle"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:layout_marginTop="16dp"/>

    <!-- Button to submit the post -->
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:id="@+id/postButton"
        android:background="@drawable/button_primary"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
