<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/single_post_row.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top">

        <!-- User profile photo -->
        <ImageView
            android:id="@+id/profilePhoto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile"
            android:layout_margin="8dp"/>

        <!-- User name TextView -->
        <TextView
            android:id="@+id/post_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image View for the post image -->
        <TextView
            android:id="@+id/post_Querie_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="query Title"
            android:layout_gravity="center_horizontal"/>

        <!-- Container for username and profile photo -->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image View for the post image -->
        <TextView
            android:id="@+id/post_Querie_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hello friends how are you this is a example of quesri post her yo will see all the queries which is posted by the users "
            android:layout_gravity="center_horizontal"/>

        <!-- Container for username and profile photo -->


    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="write a answer"/>

    <!-- Like, Comment, Share buttons and TextView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="bottom">

        <!-- Like button -->
        <ImageView
            android:id="@+id/likeButton"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/heart_black"
            android:layout_weight="1"
            android:text="Like"/>

        <ImageView
            android:id="@+id/commenButton"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/bubble_chat_black"
            android:layout_weight="1"
            android:text="Like"/>

        <ImageView
            android:id="@+id/shareButton"
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:src="@drawable/direct_black"
            android:layout_weight="1"
            android:text="Like"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="4"
            android:text="Like"/>

        <ImageView
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/bookmark_black_"
            android:layout_weight="1"
            android:text="Like"/>

        <!-- TextView at the bottom -->
    </LinearLayout>


</LinearLayout>
