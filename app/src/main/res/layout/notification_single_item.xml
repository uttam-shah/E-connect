<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/notification_item.xml -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Profile photo -->
    <ImageView
        android:id="@+id/profilePhoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile"
        android:layout_marginRight="16dp"/>

    <!-- Notification content -->
    <LinearLayout
        android:id="@+id/notificationContentLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_toRightOf="@id/profilePhoto"
        android:orientation="vertical">

        <!-- Username -->
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <!-- Notification message -->
        <TextView
            android:id="@+id/notificationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liked your post"
            android:layout_marginBottom="8dp"/>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 hours ago"
            android:textColor="@android:color/darker_gray"/>

    </LinearLayout>

    <!-- Additional action button or icon, e.g., to view the notification -->
    <ImageView
        android:id="@+id/actionButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="7dp"
        android:src="@drawable/profile" />

</RelativeLayout>
